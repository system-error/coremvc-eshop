     <table class="table"> 
    <thead>
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
        </tr>
    </thead>
    <tbody>
    @foreach (Product product in ViewBag.products)
    {
        <tr>
            <td><img class="img-thumbnail" alt="@product.Image" src="~/uploads/images/p/@product.Id/@product.Image"/></td>
            <th scope="row">@product.Name</th>
            <td>@product.Price</td>
            <td>1</td>
        </tr>
    }
    </tbody>
</table>
}






@page
@model eshop.Views.Shop.IndexModel
@{

}

<h1>Catalog</h1>

<div class="container-fluid mt-2 mb-5">
    <div class="products">
        <div class="tab-content" id="myTabContent">
            <div class="row">
                @foreach (var product in ViewBag.products)
                {
                    <div class="col-md-2">
                        <div class="card" style="height:100%;">

                            <img src="~/uploads/images/p/@product.Id/@product.Image" class="card-img-top" alt="@product.Image">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <span class="font-weight-bold title">@product.Name</span>
                                </div>
                                @if (@product.Description.Length > 300)
                                {
                            <p class="card-text mb-1 mt-1 desc">@product.Description.Substring(0,200)...</p>
                                }
                                else
                                {
                                    <p class="card-text mb-1 mt-1 desc">@product.Description</p>
                                }
                                @if (@product.Category.Name != null)
                                {
                                    <div class="d-flex align-items-center flex-row">
                                        <span class="font-weight-bold">
                                            Category: @product.Category.Name
                                        </span>
                                    </div>
                                }
                                <div class="d-flex justify-content-between">
                                    <h4 class="font-weight-bold" style="padding-top: 25px">@product.Price €</h4>
                                </div>
                            </div>
                            
                                <a href="~/Shop/AddToCart/@product.Id" class="btn btn-primary">Add to Cart</a>

                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>
